<div class="container">
    <h1>Band Log</h1>

    <div class="tabs">
        <div class="tab-button active" onclick="switchTab('tab1')">Shallow Levée</div>
        <div class="tab-button" onclick="switchTab('tab2')">Vulgar Savior</div>
    </div>

    <div id="tab1" class="tab-content active">
        <img src="pic/SL.png" alt="Shallow Levée" style="width: 30%; height: auto;">
        <div class="table-wrapper">
            <table id="table-shallow">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Activity</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div id="tab2" class="tab-content">
        <img src="https://scontent.frmq2-1.fna.fbcdn.net/..." alt="Vulgar Savior" style="width: 30%; height: auto;">
        <div class="table-wrapper">
            <table id="table-vulgar">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Activity</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
